<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Drip\Connect\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Drip\Connect\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">dripConnectLogger</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Drip\Connect\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
    <preference for="Drip\Connect\Api\SettingsInterface"
            type="Drip\Connect\Api\Settings" />
    <preference for="Drip\Connect\Api\ResourceDetailsInterface"
            type="Drip\Connect\Api\ResourceDetails" />
</config>
