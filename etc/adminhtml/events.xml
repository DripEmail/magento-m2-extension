<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="adminhtml_customer_save_after">
        <observer
            name="drip_connect_adminhtml_customer_save_after"
            instance="Drip\Connect\Observer\Customer\Admin\SaveAfter"
            disabled="false" />
    </event>
    <event name="newsletter_subscriber_delete_commit_after">
        <observer
            name="drip_connect_newsletter_subscriber_delete_commit_after"
            instance="Drip\Connect\Observer\Customer\SubscriberAfterDelete"
            disabled="false" />
    </event>
    <event name="newsletter_subscriber_save_commit_after">
        <observer
            name="drip_connect_newsletter_subscriber_save_commit_after"
            instance="Drip\Connect\Observer\Customer\SubscriberAfterSave"
            disabled="false" />
    </event>
</config>
