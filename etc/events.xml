<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="controller_action_predispatch_newsletter_subscriber_new">
        <observer
            name="drip_connect_controller_action_predispatch_newsletter_subscriber_new"
            instance="Drip\Connect\Observer\Customer\GuestSubscriberAttempt"
            disabled="false" />
    </event>
    <event name="controller_action_postdispatch_newsletter_subscriber_new">
        <observer
            name="drip_connect_controller_action_postdispatch_newsletter_subscriber_new"
            instance="Drip\Connect\Observer\Customer\GuestSubscriberCreated"
            disabled="false" />
    </event>
    <event name="controller_action_predispatch_newsletter_manage_save">
        <observer
            name="drip_connect_controller_action_predispatch_newsletter_manage_save"
            instance="Drip\Connect\Observer\Customer\NewsletterSave"
            disabled="false" />
    </event>
    <event name="customer_save_before">
        <observer
            name="drip_connect_customer_save_before"
            instance="Drip\Connect\Observer\Customer\BeforeSave"
            disabled="false" />
    </event>
    <event name="customer_save_commit_after">
        <observer
            name="drip_connect_customer_save_commit_after"
            instance="Drip\Connect\Observer\Customer\AfterSave"
            disabled="false" />
    </event>
    <event name="customer_delete_commit_after">
        <observer
            name="drip_connect_customer_delete_commit_after"
            instance="Drip\Connect\Observer\Customer\AfterDelete"
            disabled="false" />
    </event>
    <event name="sales_order_save_before">
        <observer
            name="drip_connect_sales_order_save_before"
            instance="Drip\Connect\Observer\Order\BeforeSave"
            disabled="false" />
    </event>
    <event name="sales_order_item_save_before">
        <observer
            name="drip_connect_sales_order_item_save_before"
            instance="Drip\Connect\Observer\Order\Item\BeforeSave"
            disabled="false" />
    </event>
    <event name="sales_order_item_save_commit_after">
        <observer
            name="drip_connect_sales_order_item_save_commit_after"
            instance="Drip\Connect\Observer\Order\Item\AfterSave"
            disabled="false" />
    </event>
    <event name="sales_order_save_commit_after">
        <observer
            name="drip_connect_sales_order_save_commit_after"
            instance="Drip\Connect\Observer\Order\AfterSave"
            disabled="false" />
    </event>
    <event name="sales_order_creditmemo_save_after">
        <observer
            name="drip_connect_sales_order_creditmemo_save_commit_after"
            instance="Drip\Connect\Observer\Order\CreditmemoAfterSave"
            disabled="false" />
    </event>
</config>
